<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PE Tracker</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <h1>PE Tracker</h1>
    <% tasks.forEach(function(r) { %>
      <button id='<%= r.id %>'
        onclick='javascript:logTask(<%= r.id %>);'><%= r.name %></button>
    <% }); %>
    <script>
      let currentTaskId = null;

      const logTask = async function(id) {
        let startTime = window.performance.now();
        alert("Click OK when finished"); 
        let endTime = window.performance.now();
        let timeDiff = endTime - startTime;
        let observationTime = convertTime(timeDiff);

        const response = await fetch('/log', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            users_id: -1,
            students_id: -1,
            tasks_id: id,
            duration: observationTime //"'+00:00:01'"
          })
        });
        const result = await response.json();
        console.log(result);

        currentTaskId = id;
      };

      function convertTime(ms){

        let seconds = parseInt((ms/1000) % 60)
        let minutes = parseInt((ms/(1000 * 60)) % 60)
        let hours = parseInt((ms/(1000 * 60 * 60)) % 24);
        //let calcTime = "";

        hours = (hours < 10) ? "0" + hours : hours;
        minutes = (minutes < 10) ? "0" + minutes : minutes;
        seconds = (seconds < 10) ? "0" + seconds : seconds;

        //let calcTime = "'" + hours + ":" + minutes + ":" + seconds + "'";

        return "'" + hours + ":" + minutes + ":" + seconds + "'";
      }

    </script>
  </body>
</html>